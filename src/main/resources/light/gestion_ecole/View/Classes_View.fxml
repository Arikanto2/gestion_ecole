<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="light.gestion_ecole.Controller.classecontroller"
      spacing="10"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label text="Recherche :"/>
        <TextField fx:id="searchField" promptText="Tapez ici..."/>
    </HBox>
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="Designation" text="Classe"/>
            <TableColumn fx:id="nbr_eleves" text="Nbr eleves"/>
            <TableColumn fx:id="Ecolage" text="Ecolage" />
            <TableColumn fx:id="Titulaire" text="Titulaire"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnAjouter" text="Ajouter"/>
        <Button fx:id="btnModifier" text="Modifier"/>
        <Button fx:id="btnSupprimer" text="Supprimer"/>
    </HBox>
</VBox>