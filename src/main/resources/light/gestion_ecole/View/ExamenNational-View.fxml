<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="light.gestion_ecole.Controller.ExamenNatController"
            stylesheets="@../Style/Style.css">
    <top>
        <VBox spacing="30" alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20" right="200" left="200" />
            </BorderPane.margin>
            <Label text="Liste des admissions aux examens nationaux" styleClass="courbe"/>
            <HBox alignment="CENTER">
                <Button text="+" fx:id="btnNew" id="btnAjouterT1"/>
                <Region HBox.hgrow="ALWAYS" />
                <HBox spacing="10" alignment="CENTER">
                    <ComboBox fx:id="comboClasse" promptText="Classe concernée"/>
                    <ComboBox fx:id="comboAnnescolaire" promptText="Année scolaire"/>
                </HBox>
            </HBox>
        </VBox>
    </top>
    <center>
        <StackPane alignment="CENTER">
            <BorderPane.margin>
                <Insets  top="10" right="200" left="200"/>
            </BorderPane.margin>
            <TableView fx:id="abs" styleClass="table-view">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="Action" text="" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="idEleve" text="Matricule" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="nomEleve" text="Nom et prénom" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="admission" text="Admission" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>
            <VBox alignment="CENTER" spacing="20" style="-fx-effect: dropshadow(gaussian, rgba(201, 202, 208, 0.4), 5, 0.5, 2, 2);
    -fx-border-radius: 10;
    -fx-background-radius: 10;
    -fx-background-color: white" fx:id="aj">
                <StackPane.margin>
                    <Insets left="160" right="160" top="55" bottom="20" />
                </StackPane.margin>
                <padding>
                    <Insets top="20" bottom="20"/>
                </padding>
                <VBox alignment="CENTER" spacing="10">
                    <Label  text="Ajouter une classe à l'examen"/>
                    <ComboBox fx:id="comboClasseExamen"
                              style="-fx-pref-width: 170px; -fx-padding: 6 10;
              -fx-background-radius: 6; -fx-border-radius: 6;
              -fx-border-color: #cccccc; -fx-background-color: #ffffff;"/>
                </VBox>
                <VBox alignment="CENTER" spacing="10">
                    <Label  text="Retirer une classe de l'examen"/>
                    <ComboBox fx:id="comboClassNormal"
                              style="-fx-pref-width: 170px;  -fx-padding: 6 10;
              -fx-background-radius: 6; -fx-border-radius: 6;
              -fx-border-color: #cccccc; -fx-background-color: #ffffff;"/>
                </VBox>
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="bt" text="Ajouter"
                            style="-fx-background-color: linear-gradient(to right,#80d4ff,#2980b9); -fx-text-fill: white;
                -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16; -fx-pref-width: 90;"/>
                    <Button fx:id="btnAnnuler" text="Annuler"
                            style="-fx-background-color: linear-gradient(to right,#ff9999,#ff3333); -fx-text-fill: white;
                -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16; -fx-pref-width: 90;"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <BorderPane.margin>
                <Insets right="200" left="200" bottom="20" top="10"/>
            </BorderPane.margin>
            <Button fx:id="btnEnregistrer" text="Enregistrer" id="btnAjouterT"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="5" alignment="CENTER_RIGHT">
                <Label text="Taux de réussite :"/>
                <Label text="" fx:id="Taux"/>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>
