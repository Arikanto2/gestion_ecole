<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="light.gestion_ecole.Controller.StatistiqueParClasseController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../Style/Style.css">
    <top>
        <HBox styleClass="entete" alignment="CENTER" style="-fx-background-color:#e6f7ff;">
            <padding>
                <Insets top="10" right="25"  left="30" bottom="10"/>
            </padding>
            <HBox alignment="CENTER">
                <Label text="" styleClass="ttxt"  fx:id="designClasse"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER">
                <Label text="" styleClass="ttxt" fx:id="nbEleve"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER">
                <Label text="Renvoyé:  " styleClass="ttxt"/>
                <Label text="Aucun" styleClass="ttxt" fx:id="nbrenvoyé"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER">
                <Label text="Handicapé:  " styleClass="ttxt"/>
                <Label text="Aucun" styleClass="ttxt" fx:id="nbhandicapé"/>
            </HBox>

        </HBox>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="25">
            <BorderPane prefHeight="400" prefWidth="400" styleClass="menuSt1">
                <HBox.margin>
                    <Insets left="20" top="20" bottom="20"/>
                </HBox.margin>
                <top>
                    <HBox alignment="CENTER">
                        <BorderPane.margin>
                            <Insets  top="10"/>
                        </BorderPane.margin>
                        <Label text="Moyenne Générale:  " styleClass="ttxt"/>
                        <Label text="" styleClass="ttxt" fx:id="MGclasse"/>
                    </HBox>
                </top>
                <center>
                    <StackPane fx:id="MGClasse"/>
                </center>
            </BorderPane>
            <BorderPane prefHeight="400" prefWidth="400" styleClass="menuSt1">
                <HBox.margin>
                    <Insets right="20" top="20" bottom="20"/>
                </HBox.margin>
                <top>
                    <HBox alignment="CENTER" spacing="20">
                        <BorderPane.margin>
                            <Insets  top="10"/>
                        </BorderPane.margin>
                        <HBox alignment="CENTER">
                            <Label text="Retards: " styleClass="ttxt"/>
                            <Label text="" styleClass="ttxt" fx:id="nbretard"/>
                        </HBox>
                        <HBox alignment="CENTER">
                            <Label text="Absence: " styleClass="ttxt"/>
                            <Label text="" styleClass="ttxt" fx:id="absence"/>
                        </HBox>
                        <HBox alignment="CENTER">
                            <Label text="Mauvais élèves: " styleClass="ttxt"/>
                            <Label text="Aucun" styleClass="ttxt" fx:id="Mauvais"/>
                        </HBox>
                    </HBox>
                </top>
                <center>
                    <StackPane fx:id="Assi"/>
                </center>
            </BorderPane>
        </HBox>
    </center>


</BorderPane>
