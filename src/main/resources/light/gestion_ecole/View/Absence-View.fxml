<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="light.gestion_ecole.Controller.AbsenceController"
            stylesheets="@../Style/Style.css">
    <top>
        <HBox alignment="CENTER">
            <BorderPane.margin>
                <Insets  top="20" right="200" left="200" />
            </BorderPane.margin>
            <TextField promptText="Recherche..." fx:id="searchField"/>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="5">
                <Button text="+" fx:id="btnNewAb" id="btnAjouterT1"/>
                <ComboBox fx:id="comboClasse"/>
            </HBox>
        </HBox>
    </top>
    <center>
        <TableView fx:id="abs" styleClass="table-view">
            <BorderPane.margin>
                <Insets  top="20" right="200" left="200"/>
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="idAbsence" text=""/>
                <TableColumn fx:id="idEleve" text="#" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="nomEleve" text="Nom et PrÃ©nom" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="dateAbs" text="Date d'absence" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="dateRet" text="Date de retour" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="motif" text="Motif" style="-fx-alignment: CENTER;"/>
            </columns>
        </TableView>

    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <BorderPane.margin>
                <Insets right="200" bottom="20"/>
            </BorderPane.margin>
            <HBox spacing="5" alignment="CENTER">
                <Label text="Absences:"/>
                <Label text="" fx:id="nbAbs"/>
            </HBox>
        </HBox>
    </bottom>

</BorderPane>
