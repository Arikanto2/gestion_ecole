<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="light.gestion_ecole.Controller.PointageController"
            stylesheets="@../Style/Style.css">
    <top>
        <HBox alignment="CENTER" spacing="15">
            <BorderPane.margin>
                <Insets top="15" bottom="20"/>
            </BorderPane.margin>

            <HBox fx:id="menuRetard" alignment="CENTER" styleClass="fz2">
                <Label text="Retards" styleClass="fz1"/>
            </HBox>

            <HBox fx:id="menuAbs" alignment="CENTER" styleClass="fz2">
                <Label text="Absences" styleClass="fz1"/>
            </HBox>

        </HBox>
    </top>
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
</BorderPane>


